{
  "name": "rustful-ts",
  "version": "0.2.0",
  "description": "High-performance time series prediction framework powered by Rust/WASM",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "pkg"
  ],
  "scripts": {
    "build:wasm": "cd .. && wasm-pack build -p rustful-wasm --target web --out-dir ../ts/pkg",
    "build:ts": "tsc && tsc -p tsconfig.esm.json",
    "build": "npm run build:wasm && npm run build:ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "time-series",
    "forecasting",
    "prediction",
    "arima",
    "exponential-smoothing",
    "wasm",
    "rust"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/rustful-ts"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
